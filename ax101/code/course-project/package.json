{
  "name": "course-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "academyTagNpmStart": "[[start:npm-scripts]]",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "node:machine-mock:start": "nodemon --watch src/machine-mock --exec ts-node src/machine-mock/index.ts",
    "node:machine-mock:build": "tsc src/machine-mock/index.ts --outDir build/machine-mock --esModuleInterop --skipLibCheck",
    "node:machine-mock:clean": "rimraf build/machine-mock",
    "node:machine-mock:docker:build": "npm run node:machine-mock:build && docker build -t machine-mock -f src/machine-mock/Dockerfile .",
    "node:machine-mock:docker:build-aarch64": "npm run node:machine-mock:build && docker buildx build --platform linux/arm64 -t machine-mock-aarch64 -f src/machine-mock/Dockerfile --load .",
    "node:machine-mock:package": "ax apps package src/machine-mock/ax-manifest.yml",
    "node:opcua-connector:start": "nodemon --watch src/opcua-connector --exec ts-node src/opcua-connector/index.ts",
    "node:opcua-connector:build": "tsc src/opcua-connector/index.ts --outDir build/opcua-connector --esModuleInterop --skipLibCheck",
    "node:opcua-connector:docker:build": "npm run node:opcua-connector:build && docker build -t opcua-connector -f src/opcua-connector/Dockerfile .",
    "node:opcua-connector:docker:build-aarch64": "npm run node:opcua-connector:build && docker buildx build --platform linux/arm64 -t opcua-connector-aarch64 -f src/opcua-connector/Dockerfile --load .",
    "node:opcua-connector:package": "ax apps package src/opcua-connector/ax-manifest.yml"
  },
  "academyTagNpmEnd": "[[end:npm-scripts]]",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "axp": {
    "axpVersion": "1.4.0",
    "pondVersion": 3
  },
  "dependencies": {
    "@actyx/os-sdk": "^0.3.1",
    "@actyx/pond": "^3.0.1",
    "@actyx/sdk": "^0.1.2",
    "rimraf": "^3.0.2",
    "node-opcua": "^2.43.0",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16"
  }
}
